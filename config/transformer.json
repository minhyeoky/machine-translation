{
  "name": "transformer",
  "meta": {
    "logdir": "data/output/transformer/logs",
    "ckpt_dir": "data/output/transformer/ckpt",
    "save_step": 100,
    "display_step": 10,
    "log_level": "INFO",
    "ckpt_max_keep": 10
  },
  "train": {
    "epochs": 20,
    "model": {
      "transformer": {
        "args": {
          "d_model": 256,
          "d_ff": 1024,
          "n_head": 4,
          "n_layer": 5
        }
      }
    },
    "optimizer": {
      "type": 0,
      "args": {
        "lr": 0.001,
        "beta_1": 0.9,
        "beta_2": 0.98
      }
    }
  },
  "inference": {
    "inference_size": 2
  },
  "data_loader": {
    "batch_size": 32,
    "args": {
      "n_data": null,
      "validation_split": 0.02,
      "num_words": 3000,
      "maxlen": 20
    }
  }
}